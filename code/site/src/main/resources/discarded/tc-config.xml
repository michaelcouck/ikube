<?xml version="1.0" encoding="UTF-8"?>

<tc:tc-config xmlns:tc="http://www.terracotta.org/config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.terracotta.org/config http://www.terracotta.org/schema/terracotta-5.xsd">
	<servers>
		<server name="localhost" host="localhost">
			<dso-port>9510</dso-port>
			<jmx-port>9520</jmx-port>
			<data>target/terracotta/server/data</data>
			<logs>target/terracotta/server/logs</logs>
			<statistics>target/terracotta/server/statistics</statistics>
		</server>
	</servers>
	<clients>
		<logs>target/terracotta/clients/logs/%(tc.nodeName)</logs>
		<statistics>target/terracotta/clients/statistics/%(tc.nodeName)</statistics>
		<modules>
			<module name="tim-jetty-6.1" version="2.1.0" />
			<module name="tim-annotations" version="1.5.0" />
			<module name="tim-spring-security-2.0" version="1.3.0" />
		</modules>
	</clients>
	<application>
		<dso>
			<app-groups>
				<app-group name="foo-group">
					<web-application>test</web-application>
				</app-group>
			</app-groups>
			<instrumented-classes>
				<include>
					<class-expression>com.vaadin..*</class-expression>
					<honor-transient>false</honor-transient>
				</include>
				<include>
					<class-expression>com.vaadin.incubator.spring.ui..*</class-expression>
					<honor-transient>true</honor-transient>
					<on-load>
						<execute>
							<![CDATA[
								com.vaadin.incubator.spring.util.ApplicationHelper.getApplicationContext(self.getApplication()).getAutowireCapableBeanFactory().autowireBean(self);
							]]>
						</execute>
					</on-load>
				</include>
				<include>
					<class-expression>com.vaadin.incubator.spring.ui.FooApplication</class-expression>
					<honor-transient>true</honor-transient>
					<on-load>
						<execute>
							<![CDATA[
								com.vaadin.incubator.spring.util.ApplicationHelper.getApplicationContext(self).getAutowireCapableBeanFactory().autowireBean(self);
							]]>
						</execute>
					</on-load>
				</include>
				<include>
					<class-expression>com.vaadin.incubator.spring.util..*</class-expression>
					<honor-transient>true</honor-transient>
				</include>
				<include>
					<class-expression>com.vaadin.incubator.spring.util.BeanValidationValidator</class-expression>
					<honor-transient>true</honor-transient>
					<on-load>
						<execute>
							<![CDATA[
								self.validator = self.factory.getValidator();
							]]>
						</execute>
					</on-load>
				</include>
				<include>
					<class-expression>com.vaadin.incubator.spring.model..*</class-expression>
					<honor-transient>true</honor-transient>
				</include>
				<include>
					<class-expression>org.springframework.security.AccessDeniedException</class-expression>
				</include>								
			</instrumented-classes>
			
			<additional-boot-jar-classes>
				<include>java.util.Locale</include>
				<include>java.beans.FeatureDescriptor</include>
				<include>java.beans.PropertyDescriptor</include>
				<include>java.lang.NullPointerException</include>
				<include>java.util.TimeZone</include>
				<include>sun.util.calendar.ZoneInfo</include>
			</additional-boot-jar-classes>
			<web-applications>
				<web-application>test</web-application>
			</web-applications>
		</dso>
	</application>
</tc:tc-config>
